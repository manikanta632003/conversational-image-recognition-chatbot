{
  "name": "ai-image-chatbot",
  "version": "1.0.0",
  "description": "AI Conversational Image Recognition Chatbot",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "start": "node server/index.js"
  },
  "keywords": [
    "ai",
    "chatbot",
    "image-recognition",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "multer": "^2.0.2",
    "pdfkit": "^0.14.0",
    "validator": "^13.15.23"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
